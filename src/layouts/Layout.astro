---
interface Props {
  colors?: { primary: string; secondary: string; tertiary: string }
}

const colors = Astro.props.colors
---

<!doctype html>
<html
  lang="en"
  style={colors
    ? `
        --primary: ${colors.primary};
        --secondary: ${colors.secondary};
        --tertiary: ${colors.tertiary};`
    : undefined}
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@200..900&family=Manrope:wght@200..800&display=swap"
      rel="stylesheet"
    />
    <title>Astro Basics</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    padding: 0;
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Manrope", sans-serif;
    color: var(--primary, black);
    background: var(--secondary, white);
    line-height: 1;
  }
  body {
    --pad: 2rem;
    padding: var(--pad);
    width: calc(100% - 2 * var(--pad));
    height: calc(100% - 2 * var(--pad));
  }
  :global(p, p > *) {
    line-height: 1.2;
  }
  :global(ul, li, h1) {
    padding: 0;
    margin: 0;
  }
  :global(a) {
    color: var(--primary, black);
    text-underline-offset: 5px;
    text-decoration-thickness: 1px;
    transition: all 0.125s;
  }
  :global(a:hover, a:focus-visible) {
    font-weight: bold;
    text-underline-offset: calc(5px - 2px);
    text-decoration-thickness: 3px;
  }
</style>
