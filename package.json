{
  "name": "portfolio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --port 5173",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write .",
    "database": "ortfodb --config ./ortfodb.yaml --scattered build works.json",
    "formatdb": "bunx prettier --write works.json",
    "db": "bun database && bun formatdb && git add works.json && bun run ./commit-database-changes.ts && git push",
    "mediaup": "rclone --progress copy media/ www:media.gwen.works/",
    "postinstall": "patch-package && husky"
  },
  "lint-staged": {
    "works.json": "bunx prettier --write"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.6.0",
    "astro": "^5.1.1",
    "date-fns": "^4.1.0",
    "jsdom": "^27.0.0",
    "picomatch": "^4.0.2",
    "pofile": "^1.1.4",
    "slug": "^11.0.0",
    "tinycolor2": "^1.6.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.23",
    "@types/jsdom": "^27.0.0",
    "@types/picomatch": "^4.0.0",
    "@types/slug": "^5.0.9",
    "husky": "^9.1.7",
    "patch-package": "^8.0.1",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-sort-json": "^4.1.1",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0"
  }
}
